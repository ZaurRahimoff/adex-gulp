extends ../layouts/default

block variables
	- var pageTitle = 'ADEX - Contacts'
	- var pageDescription = 'Contact information for ADEX exhibition organisers and partners'
	- var pageKeywords = 'ADEX, contacts, organisers, partners, exhibition'
	- var pageCanonical = 'https://adex.az/contact.html'
	- var pageOgImage = 'https://adex.az/og-image.jpg'
	- var pageAuthor = 'ADEX'

block content
	// Breadcrumb
	include ../mixins/_breadcrumb
	+breadcrumb([
		{text: 'Главная', href: 'index.html'},
		{text: 'Kонтакты', href: null}
	])

	// Contact Section
	section.contact-page.page__spacing
		.container
			// Organisers Section
			.contact__section
				h1.contact__title Organisers
				.contact__wrapper
					.card.contact__card
						.contact__logo
							img(src="assets/img/webp/organiser-logo-1.webp" alt="Organiser Logo" loading="lazy")
						.contact__divider
						.contact__info
							h2.contact__company Iteca Caspian LLC
							.contact__person
								h3.contact__name Parvana Ahmadova
								p.contact__position Exhibition Manager
							.contact__contacts
								.contact__contact-item
									i.fas.fa-phone.contact__contact-icon
									span.contact__contact-text +994 12 404 10 01
								.contact__contact-item
									i.fas.fa-fax.contact__contact-icon
									span.contact__contact-text +994 12 404 10 02
								.contact__contact-item
									i.fas.fa-envelope.contact__contact-icon
									a.contact__contact-text(href="mailto:info@iteca.az") info@iteca.az

					.card.contact__card
