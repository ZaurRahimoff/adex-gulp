  // Hero Section (Video 1)
  section.hero
    .hero__video-wrapper
      img.hero__video-image(src="assets/img/webp/hero-bg.webp" alt="" aria-hidden="true")
      iframe.hero__video(width="1396" height="785" src="https://www.youtube.com/embed/wfsTGsXGKvE" title="ADEX 2024 Азербайджан ( военная выставка )" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen)
      .hero__overlay
    a.hero__play-btn(href="#")
      i.fas.fa-play
    .hero__content
      .container
        .row
          .col-12
            h1.hero__title 30th Anniversary Azerbaijan International Construction Exhibition
        .row.g-4
          include ../mixins/_button
          .col-6.col-md-3.col-lg-3
            +button("Бронирование стенда", "action", "button", "#")
          .col-6.col-md-3.col-lg-3
            +button("Станте спонсором", "action", "button", "#")
          .col-6.col-md-3.col-lg-3
            +button("Обратная связь", "action", "button", "#")
          .col-6.col-md-3.col-lg-3
            +button("Купите билет", "action", "button", "#")

  // Banner Section (Statistics)
