  - var pageDescription = 'ADEX - 3 - 5 June 2026, Azerbaijan, Baku'
  - var pageKeywords = 'ADEX, энергетика, Баку, выставка'
  - var pageCanonical = 'https://adex.az'
  - var pageOgImage = 'https://adex.az/og-image.jpg'
