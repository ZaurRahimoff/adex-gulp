                      .ep__participant-info
                        h3.ep__participant-name Vugar Mustafayev
                        p.ep__participant-role Ministry of Defence Industry of the Republic of Azerbaijan Minister

              // Speakers Section
              .row.mb-4
                .col-12
                  .ep__section-label Speakers
                  .ep__participants-list
                    // Speaker 1
                    .ep__participant-card
                      .ep__participant-main
                        .ep__participant-avatar
                          img(src="https://media.istockphoto.com/id/1399565382/photo/young-happy-mixed-race-businessman-standing-with-his-arms-crossed-working-alone-in-an-office.jpg?s=612x612&w=0&k=20&c=buXwOYjA_tjt2O3-kcSKqkTp2lxKWJJ_Ttx2PhYe3VM=" alt="Emil Hasanov" loading="lazy")
                        .ep__participant-info
                          h3.ep__participant-name Emil Hasanov
