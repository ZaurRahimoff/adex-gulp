extends ../layouts/default

block variables
  - var pageTitle = 'ADEX - Программа мероприятий'
  - var pageDescription = 'ADEX - Программа мероприятий, расписание событий выставки'
  - var pageKeywords = 'ADEX, программа мероприятий, расписание, события, выставка'
  - var pageCanonical = 'https://adex.az/events-programme'
  - var pageOgImage = 'https://adex.az/og-image.jpg'
  - var pageAuthor = 'ADEX'

block content
  // Breadcrumb Section
  include ../mixins/_breadcrumb
  +breadcrumb([
    {text: 'Главная', href: 'index.html'},
    {text: 'Программа мероприятий', href: null}
  ])

  // Main Content
  section.ep.page__spacing
    .container
      // Page Title and Year Selector
      .row.align-items-center.mb-4
        .col-12.col-md-auto
          h1.page-title.mb-0 Events Programme
        .col-12.col-md-auto.ms-md-auto
          .select2-wrapper.mt-4.mt-md-0(style="min-width: 120px;")
            include ../mixins/_select2
            +select2(
              'year',
              '2024',
              [
                {value: '2024', text: '2024'},
                {value: '2025', text: '2025'},
                {value: '2026', text: '2026'},
                {value: '2027', text: '2027'}
              ],
              {placeholder: 'Выберите год', allowClear: false, minimumResultsForSearch: Infinity},
              'primary',
              'year-select',
              '',
              ''
            )

      // Tabs
      .row.mb-4
        .col-12
          ul.nav.nav-tabs.ep__tabs.justify-content-start.justify-content-md-center.mb-4(role="tablist")
            li.nav-item(role="presentation")
              button.nav-link.ep__tab#press-conference-tab(
                data-bs-toggle="tab"
                data-bs-target="#press-conference"
                type="button"
                role="tab"
                aria-controls="press-conference"
                aria-selected="false"
                data-type="press-conference"
              ) Press Conference
            li.nav-item(role="presentation")
              button.nav-link.ep__tab.active#day-1-tab(
                data-bs-toggle="tab"
                data-bs-target="#day-1"
                type="button"
                role="tab"
                aria-controls="day-1"
                aria-selected="true"
                data-type="day"
                data-day="1"
              ) 1 Day
            li.nav-item(role="presentation")
              button.nav-link.ep__tab#day-2-tab(
                data-bs-toggle="tab"
                data-bs-target="#day-2"
                type="button"
                role="tab"
                aria-controls="day-2"
                aria-selected="false"
                data-type="day"
                data-day="2"
              ) 2 Day
            li.nav-item(role="presentation")
              button.nav-link.ep__tab#day-3-tab(
                data-bs-toggle="tab"
                data-bs-target="#day-3"
                type="button"
                role="tab"
                aria-controls="day-3"
                aria-selected="false"
                data-type="day"
                data-day="3"
              ) 3 Day

          // Hero Image
          .row.d-none.d-md-flex
            .col-12
              .ep__hero-image
                img(src="assets/img/webp/event-programme.webp" alt="Events Programme" loading="lazy")

          // Tab Content
          .tab-content#events-programme
            // Press Conference Tab
            .tab-pane.fade#press-conference(role="tabpanel" aria-labelledby="press-conference-tab")
              // Press Conference content will be here
              .row.mb-4
                .col-12
                  .ep__events-list
                    .ep__event-item
                      .ep__event-time
                        i.fas.fa-clock
                        span TBA
                      .ep__event-content
                        p.ep__event-title Press Conference content will be added here

            // Day 1 Tab
            .tab-pane.fade.show.active#day-1(role="tabpanel" aria-labelledby="day-1-tab")
              // Day Header Block
              .row.mb-4
                .col-12
                  .ep__day-header
                    .row.align-items-center
                      .col-12.col-md-auto
                        .ep__day-info
                          h2.ep__day-title 1 Day
                          .ep__day-date
                            i.fal.fa-calendar-alt
                            span 24 September, Thursday
                      .col-12.col-md-auto.ms-md-auto
                        include ../mixins/_button
                        a.btn.btn--secondary.ep__download-btn(href="#")
                          i.fal.fa-download.me-2
                          | Download the programme

              // Events List
              .row.mb-4
