extends ../layouts/default

block variables
	- var pageTitle = 'ADEX - Visit the Exhibition'
	- var pageDescription = 'Register to visit ADEX exhibition'
	- var pageKeywords = 'ADEX, visit exhibition, registration, visitor'
	- var pageCanonical = 'https://adex.az/visit-exhibition.html'
	- var pageOgImage = 'https://adex.az/og-image.jpg'
	- var pageAuthor = 'ADEX'

block content
	// Breadcrumb
	include ../mixins/_breadcrumb
	+breadcrumb([
		{text: 'Главная', href: 'index.html'},
		{text: 'Посетить выставку', href: null}
	])

	// Visit Exhibition Section
	section.visit-exhibition-section
		.container
			// Page Title
			h1.visit-exhibition-section__title Visit the exhibition

			// Visitor Card
			.visit-exhibition-section__card
				// Card Header
				.visit-exhibition-section__card-header
					h2.visit-exhibition-section__card-title We will be happy to welcome you at the Exhibition.
					p.visit-exhibition-section__card-subtitle Please select the right category.

				// Registration Buttons
				.visit-exhibition-section__buttons
					// Professional Visitor Button
					a.visit-exhibition-section__button.visit-exhibition-section__button--professional(href="#")
						.visit-exhibition-section__button-icon
							i.fal.fa-user
						.visit-exhibition-section__button-text
							| Register as Professional Visitor

					// Student Button
					a.visit-exhibition-section__button.visit-exhibition-section__button--student(href="#")
						.visit-exhibition-section__button-icon
							i.fal.fa-graduation-cap
						.visit-exhibition-section__button-text Register as Student
