extends ../layouts/default

block variables
	- var pageTitle = 'ADEX - Venue'
	- var pageDescription = 'Venue information for ADEX exhibition'
	- var pageKeywords = 'ADEX, venue, Baku Expo Center, location'
	- var pageCanonical = 'https://adex.az/venue.html'
	- var pageOgImage = 'https://adex.az/og-image.jpg'
	- var pageAuthor = 'ADEX'

block content
	// Breadcrumb
	include ../mixins/_breadcrumb
	+breadcrumb([
		{text: 'Главная', href: 'index.html'},
		{text: 'Как добраться до выставки', href: null}
	])

	// Venue Section
	section.venue-page
		.container
			// Venue Title
			h1.venue-page__title Venue

			// Venue Image
			.venue-page__image-wrapper
				iframe.venue-page__image(src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d6073.152286132823!2d50.0331593!3d40.4403835!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x403061043b005cbd%3A0x67b03e3eba5d9c28!2z0JHQsNC60YMg0K3QutGB0L_QviDQptC10L3RgtGA!5e0!3m2!1sru!2saz!4v1766744543152!5m2!1sru!2saz" width="100%" height="460" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade")

			// Venue Info Cards
			.row.g-3.g-lg-5.venue-page__info-cards
				.col-12.col-lg-6
					.venue-page__card
						.venue-page__card-content
							i.fal.fa-location-dot.venue-page__card-icon
							.venue-page__card-text
								p.venue-page__card-title Baku Expo Center
								p.venue-page__card-subtitle Address: 515, H. Aliyev ave., AZ1050, Baku, Azerbaijan
				.col-12.col-lg-6
					.venue-page__card
						.venue-page__card-content
							i.fal.fa-bus.venue-page__card-icon
							.venue-page__card-text
								p.venue-page__card-title How to get to the exhibition centre:
								p.venue-page__card-subtitle From "Koroglu" metro station - N 160, 171
