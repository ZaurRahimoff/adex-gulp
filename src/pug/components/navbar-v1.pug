// Мобильное меню (Offcanvas)
.offcanvas.offcanvas-start.navbar__mobile-menu#navbarMobileMenu(tabindex="-1" aria-labelledby="navbarMobileMenuLabel")
	.offcanvas-header.navbar__mobile-header
		button.navbar__mobile-close(type="button" data-bs-dismiss="offcanvas" aria-label="Close")
			i.fa-solid.fa-times.navbar__close-icon
		.offcanvas-title#navbarMobileMenuLabel
			img(src="assets/img/logo.svg" alt="ADEX" width="98" height="72")
	.offcanvas-body.navbar__mobile-body
		.navbar__mobile-languages
			.navbar__mobile-language-item.navbar__mobile-language-item--active
				span.fi.fi-az.navbar__mobile-language-flag
				span AZ
			.navbar__mobile-language-item
				span.fi.fi-gb.navbar__mobile-language-flag
				span EN
			.navbar__mobile-language-item
				span.fi.fi-ru.navbar__mobile-language-flag
				span RU
		
		.navbar__mobile-menu-wrapper#navbarMobileMenuWrapper
		
		.navbar__mobile-buttons#navbarMobileButtons